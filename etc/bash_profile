# uname -----------------------------------------------------------
OS=`uname -s`


# PATH ------------------------------------------------------------
case $OS in
	Darwin)
		export PATH=/opt/local/bin:/opt/local/sbin:$PATH
		;;
esac


# LANG ------------------------------------------------------------
export LANG=en_US.UTF-8

# .bashrc ---------------------------------------------------------
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi
